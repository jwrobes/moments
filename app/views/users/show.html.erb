<div class="nav-offset-container container">
		<div class="current_time" id= "time-setups">
			<%=form_tag('/users/time', method: 'POST', remote: true) do |f| %>
			<h3 id="start_time">Start Time: <%= current_user.start_time%></h3>
			 <fieldset class="fieldset fieldset--demo"><div class="fieldset__wrapper"><input class="start_time" name="start_time" type="text" placeholder="Start Time&hellip;"></div></fieldset>
			 <h3 id="end_time">End Time: <%= current_user.end_time%></h3>
		 	 <fieldset class="fieldset fieldset--demo"><div class="fieldset__wrapper"><input class="end_time" name="end_time" type="text" placeholder="End Time&hellip;"></div></fieldset>
		 	 <br>
		    <button type="submit" class="btn btn-default">Submit</button>
			<% end %>
	 </div>  

	<div class="moment_message">
		<h3 id="message_body"><%=current_user.message%></h3>
		<br>
	</div>
	<div id="message_input">
		<%=form_tag('/users/message', method: 'POST', remote: true) do |f| %>
			<input type="text"  class="form-control" name="message_body" placeholder="Moment Message">
			<br>
			<button type="submit" class="btn btn-default">Update Message</button>
		<% end %>
	</div>	 

	<div class ="moments_toggle">
	<br>
	<% if current_user.moments_on %>
		<input  class="toggle blue small on" id="cb" type="checkbox" />
	<% else %>
		<input class="toggle blue small off" id="cb" type="checkbox" />
	<% end %>
	</div>
 </div>